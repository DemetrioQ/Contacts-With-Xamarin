<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsWithXamarin.Views.AddContactPage"
             xmlns:local="clr-namespace:ContactsWithXamarin.Controls"
             Title="Create contact">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding AddCommand}" Order="Primary"></ToolbarItem>
        <ToolbarItem Text="Scan QR code" Command="{Binding ScanQrCommand}" Order="Secondary"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
   
    <StackLayout>
            <local:ContacInfoView></local:ContacInfoView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>