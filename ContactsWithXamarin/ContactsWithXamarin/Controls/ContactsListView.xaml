<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsWithXamarin.Controls.ContactsListView">
  <ContentView.Content>
      <Grid ColumnDefinitions="Auto,*" Margin="10">
            <Frame Padding="0" CornerRadius="100" IsClippedToBounds="True" HeightRequest="50" WidthRequest="50" HorizontalOptions="Start">
                <Image Source="{Binding Image}" Grid.Column="0" Aspect="AspectFill"></Image>
            </Frame>
            <Label Grid.Column="1" HorizontalTextAlignment="Start" FontSize="20" TextColor="Black" Padding="10">
                <Label.Text>
                <MultiBinding StringFormat="{} {0} {1}">
                    <Binding Path="FirstName"></Binding>
                    <Binding Path="LastName"></Binding>
                </MultiBinding>
                </Label.Text>
            </Label>
        </Grid>
  </ContentView.Content>
</ContentView>